{
    "name": "下載Youtube影片",
    "description": "目前只支援HTTP 漸進式下載，所以可能無法下載到線上觀看的最高畫質",
    "version": "1.1",
    "manifest_version": 3,
    "icons" : {
      "128": "128.png"
    },
    "permissions": [
      "activeTab",
      "tabs",
      "scripting"
    ],
    "action": {
      "default_title": "TITLE",
      "default_popup": "test.html",
      "default_icon": {
        "128": "128.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["https://www.youtube.com/watch*", "https://www.youtube.com/playlist*"],
        "js": ["js/content.js"]
      }
    ],
    "host_permissions": [
      "<all_urls>"
    ]
  }